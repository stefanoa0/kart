<p id="notice"><%= notice %></p>

<h3>Todos os Produtos</h3>

<div class="row">
	<% @produtos.each do |produto| %>
	<div class="col s12 m6 l4">
		<div class="card">
			<div class="card-image">
				<%= image_tag produto.imagem.url(:medium) %>
				<span class="card-title red-text text-darken-4 bold-text"><%= produto.nome%></span>
			</div>
			<div class="card-content">
				<p>
					<%= produto.descricao %>
				</p>
				<p>
					R$ <%= produto.preco %>
				</p>
			</div>
					
			<div class="card-action">
				<%= hidden_field_tag :produto_id, produto.id %>
				<%= hidden_field_tag :cliente_id,  current_user.nil? ? '' : current_user.id %>
				<div class="actions right-align">
					<button class="btn waves-effect waves-light red darken-4" type="submit" name="action">
						Comprar <i class="material-icons right">add_shopping_cart</i>
					</button>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>
