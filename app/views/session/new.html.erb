<div class="login">
	<div class="container">
		<div class="form">

			<h1>Log in</h1>

			<%= form_for(:session, url: login_path) do |form| %>
				<%= form.email_field :email, :placeholder => "Email" %>
				<%= form.password_field :password, :placeholder => "Password" %>
				<%= form.submit "Login", class: "btn-submit" %>
			<% end %>

		</div>
	</div>
</div>